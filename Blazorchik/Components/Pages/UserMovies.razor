@page "/movies"
@using Blazorchik.Model
@inject HttpClient Http
@inject NavigationManager NavigationManager

<style>
    body {
        background-color: #f8f9fa; /* Светлый фон */
    }
    h3 {
        color: #8b00ff; /* Цвет заголовка */
    }
    .btn-primary {
        background-color: #8b00ff;
        border-color: #8b00ff;
    }
    .btn-primary:hover {
        background-color: #007bff;
        border-color: #007bff;
    }

    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    .table th, .table td {
        padding: 12px;
        border: 1px solid #dee2e6;
        text-align: center;
    }

    .table th {
        background-color: #8b00ff;
        color: white;
    }

</style>

<h3>Каталог фильмов</h3>

@if (movies == null)
{
    <p><em>Загрузка...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Жанр</th>
                <th>Рейтинг</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in movies)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Genre</td>
                    <td>@movie.Rating</td>
                    <td>
                        <NavLink href="@($"/movies/{movie.Id}")" class="btn btn-primary">Подробнее</NavLink>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Movie>? movies;

    protected override async Task OnInitializedAsync()
    {
        movies = await Http.GetFromJsonAsync<List<Movie>>("api/movie"); // Замените на правильный URL вашего API
    }
}

